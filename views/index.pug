extends layout

include nav.pug

mixin slider(title, id)
    h2=title
    div(uk-slider="sets: true;" id=id + "1")
        div(class="uk-position-relative")
            div(class="uk-slider-container uk-light" tabindex="-1" uk-slider="sets: true")
                ul(class="uk-slider-items uk-child-width-1-2 uk-child-width-1-6@s uk-grid" id=id)

            div(class="uk-hidden@s uk-light")
                a(class="uk-position-center-left uk-position-small" href="#" uk-slidenav-previous uk-slider-item="previous")
                a(class="uk-position-center-right uk-position-small" href="#" uk-slidenav-next uk-slider-item="next")
            div(class="uk-visible@s")
                a(class="uk-position-center-left-out uk-position-small" href="#" uk-slidenav-previous uk-slider-item="previous")
                a(class="uk-position-center-right-out uk-position-small" href="#" uk-slidenav-next uk-slider-item="next")


block content 
    div(class="top-wrap uk-position-relative uk-light uk-background-secondary")
        div(class="nav" data-uk-sticky="cls-active: uk-background-secondary uk-box-shadow-medium; top: 100vh; animation: uk-animation-slide-top")
            div(class="uk-container-fluid page-spacing")
                nav(class="uk-navbar uk-navbar-container uk-navbar-transparent" data-uk-navbar)
                    +navItems()
        div(class="uk-cover-container uk-light uk-flex uk-flex-middle top-wrap-height")
            div(class="uk-container-fluid uk-flex-auto top-container uk-position-relative uk-margin-medium-top page-spacing" data-uk-parallax="y: 0,50; easing:0;opacity:0.2")
                div(class="uk-width-1-2@s" data-uk-scrollspy="cls: uk-animation-slide-right-medium; target: > *; delay: 150")
                    img(src="/static/img/fg.webp")
                    h1(class="uk-margin-remove-top") Watch Season 2 now
                    p(class="subtitle-text uk-visible@s") In this sequel to "Vikings," a hundred years have passed and a new generation of legendary heroes arises to forge its own destiny - and make history.
                    button(class="uk-button uk-button-default uk-margin-right play-button") 
                        span(class="uk-margin-small-right" data-uk-icon="play")
                        | Play
                    button(class="uk-button uk-button-default info-button") 
                        span(class="uk-margin-small-right" data-uk-icon="info")
                        | More Info
            img(src="/static/img/bg.webp" alt="" data-uk-cover data-uk-img data-uk-parallax="opacity: 1,0.1; easing:0")
        div(class="uk-position-bottom-center uk-position-medium uk-position-z-index uk-text-center")
            a(href="#content" data-uk-scroll="duration: 500" data-uk-icon="icon: arrow-down; ratio: 2;")
    section(id="content" class="uk-section  page-spacing")
        div(class="uk-container-fluid")
            +slider("Movies", "movies")
            +slider("TV Shows", "series")
            +slider("Video Games", "games")

block scripts 
    script(src="/static/js/home.js" defer)